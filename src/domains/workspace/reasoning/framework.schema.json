{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Reasoning Framework Definition",
  "description": "Schema for reasoning framework definitions used in the modular reasoning system",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "category",
    "difficulty",
    "structure",
    "prompts",
    "when_to_use",
    "examples",
    "metadata"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the framework (kebab-case)"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable name of the framework"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Clear description of what the framework does and when to use it"
    },
    "category": {
      "type": "string",
      "enum": [
        "strategic",
        "analytical",
        "technical",
        "user-centric",
        "operational",
        "creative",
        "risk"
      ],
      "description": "Primary category of the framework for organization"
    },
    "subcategory": {
      "type": "string",
      "description": "Secondary category for more specific classification"
    },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"],
      "description": "Difficulty level for users"
    },
    "estimated_time": {
      "type": "string",
      "pattern": "^[0-9]+-[0-9]+\\s+minutes$",
      "description": "Estimated time to complete framework (e.g., '30-45 minutes')"
    },
    "structure": {
      "type": "array",
      "minItems": 2,
      "maxItems": 10,
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 200
          },
          "required": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "description": "Framework structure sections"
    },
    "prompts": {
      "type": "array",
      "minItems": 2,
      "maxItems": 20,
      "items": {
        "type": "string",
        "minLength": 10,
        "maxLength": 200
      },
      "description": "Guiding questions for each section of the framework"
    },
    "when_to_use": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 20,
        "maxLength": 200
      },
      "description": "Specific situations where this framework is most effective"
    },
    "when_not_to_use": {
      "type": "array",
      "maxItems": 5,
      "items": {
        "type": "string",
        "minLength": 20,
        "maxLength": 200
      },
      "description": "Situations where this framework might not be appropriate"
    },
    "examples": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "minLength": 20,
            "maxLength": 300
          }
        }
      },
      "description": "Real-world examples of framework usage"
    },
    "tags": {
      "type": "array",
      "maxItems": 10,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Tags for searching and categorization"
    },
    "metadata": {
      "type": "object",
      "required": ["version", "author", "quality_level"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version (e.g., '1.0.0')"
        },
        "author": {
          "type": "string",
          "minLength": 2,
          "maxLength": 100,
          "description": "Framework author or source"
        },
        "quality_level": {
          "type": "string",
          "enum": ["core", "extended", "experimental", "custom"],
          "description": "Quality level indicating validation and review status"
        },
        "created_date": {
          "type": "string",
          "format": "date-time",
          "description": "When framework was created"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "When framework was last updated"
        },
        "validation_status": {
          "type": "object",
          "properties": {
            "validated_by": {
              "type": "string",
              "description": "Who validated this framework"
            },
            "validation_date": {
              "type": "string",
              "format": "date-time"
            },
            "validation_notes": {
              "type": "string"
            },
            "effectiveness_rating": {
              "type": "number",
              "minimum": 1,
              "maximum": 5,
              "description": "Rated effectiveness based on real-world usage"
            }
          }
        },
        "usage_stats": {
          "type": "object",
          "properties": {
            "total_uses": {
              "type": "integer",
              "minimum": 0
            },
            "user_satisfaction": {
              "type": "number",
              "minimum": 1,
              "maximum": 5
            },
            "completion_rate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        }
      }
    },
    "prerequisites": {
      "type": "array",
      "maxItems": 5,
      "items": {
        "type": "string"
      },
      "description": "Required knowledge or conditions for effective framework use"
    },
    "related_frameworks": {
      "type": "array",
      "maxItems": 5,
      "items": {
        "type": "string"
      },
      "description": "Other frameworks that complement or work well with this one"
    }
  },
  "additionalProperties": false
}
