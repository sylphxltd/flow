{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx -y github:sylphxltd/flow sysinfo --hook message"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx -y github:sylphxltd/flow sysinfo --hook session"
          }
        ]
      }
    ]
  }
}
