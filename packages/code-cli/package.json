{
  "name": "@sylphx/code-cli",
  "version": "0.1.0",
  "description": "Sylphx Code CLI - Headless CLI tool",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "sylphx-code": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts src/headless.ts --outdir dist --target node --format esm --sourcemap",
    "dev": "bun src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sylphx/code-core": "workspace:*",
    "commander": "^14.0.2",
    "inquirer": "^12.10.0",
    "chalk": "^5.6.2",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "keywords": [
    "cli",
    "code",
    "ai",
    "assistant"
  ],
  "author": "sylphxltd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphxltd/flow.git",
    "directory": "packages/code-cli"
  }
}
