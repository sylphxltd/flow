{
  "name": "@sylphx/code-server",
  "version": "0.1.0",
  "description": "Sylphx Code Server - tRPC server with SSE streaming",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap",
    "build:server": "bun build src/server/web/server.ts --outdir dist --target node --format esm --sourcemap",
    "dev": "bun src/server/web/server.ts",
    "start": "bun dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sylphx/code-core": "workspace:*",
    "@trpc/server": "^11.7.1",
    "express": "^5.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/express": "^5.0.0",
    "@types/node": "^24.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "keywords": [
    "trpc",
    "server",
    "sse",
    "streaming",
    "api"
  ],
  "author": "sylphxltd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphxltd/flow.git",
    "directory": "packages/code-server"
  }
}
