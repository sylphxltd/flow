{
  "name": "@sylphxltd/flow",
  "version": "1.0.0",
  "description": "Sylphx Flow - Type-safe development flow for modern web development",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sylphx-flow": "dist/index.js"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphxltd/flow.git"
  },
  "keywords": [
    "development",
    "flow",
    "guidelines",
    "typescript",
    "nextjs",
    "sveltekit",
    "react",
    "flutter",
    "type-safe",
    "mcp",
    "ai-agents",
    "github-installation"
  ],
  "author": "sylphxltd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylphxltd/flow/issues"
  },
  "homepage": "https://github.com/sylphxltd/flow#readme",
  "scripts": {
    "build": "bun run build:search-index && bun build src/index.ts --outdir dist --target node --minify --splitting --external react-devtools-core && cp -r assets dist/",
    "build:search-index": "bun scripts/build-search-index.ts",
    "dev": "bun src/index.ts",
    "start": "bun dist/index.js",
    "start:node": "node dist/index.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun build",
    "prepare": "bun run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@types/react": "^19.2.2",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "figlet": "^1.9.3",
    "hnswlib-node": "^3.0.0",
    "ignore": "^7.0.5",
    "ink": "^6.3.1",
    "ink-select-input": "^6.2.0",
    "ink-table": "^3.1.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.5.2",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
