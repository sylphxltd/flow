{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "scripts", "src/commands/mcp.ts"]
}
